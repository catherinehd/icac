@import "../../../assets/css/variable.styl"

main
  width 100%
  .top-img
    width 100%
    //height 400px
    //overflow hidden
    //background-image: url('../../../assets/img/bg-top.png')
    //background-size cover
  .overview
    margin 90px auto
    width 1200px
    display flex
    justify-content space-around
    .overview-img
      width 500px
      height 350px
      margin-right 49px
    .detail-box
      hr
        margin 25px 0
        width 50px
        height 4px
        background $theme-main-light-blue-color
      .detail
        width 639px
        p
          color $font-gray-color
          margin-bottom 16px
          line-height 22px
        button
          margin-top 0
  .newsroom-box
    background $theme-main-gray-color
    width 100%
    padding 36px 0 82px
    .newsroom
      width 1200px
      margin 0 auto
      .title-box
        display flex
        justify-content space-between
      .more
        font-size $font-nomal-size
        color rgba(52,52,52,0.7)
        cursor pointer
        img
          width 10px
          margin-left 12px
          height @width
      .detail
        border-top 2px solid rgba(189,189,189,0.3)
        margin-top 29px
        padding-top 53px
        ul
          display flex
          justify-content space-between
          li
            width 344px
            .small-title
              width 328px
              height 56px
              display -webkit-box
              -webkit-box-orient vertical
              -webkit-line-clamp 2
              overflow hidden
              text-overflow ellipsis
              font-size $font-big-size
              line-height 1.56
            .date
              font-size $font-small-size
              color  $font-light-gray-color
              margin 20px 0 7px
              height 19px
            .expression
              width 336px
              height 88px
              display -webkit-box
              -webkit-box-orient vertical
              -webkit-line-clamp 4
              overflow hidden
              text-overflow ellipsis
              font-size $font-nomal-size
              line-height 22px
              word-wrap break-word
              color #6e6e6e
            button
              &:hover
                color $font-white-color
                background $theme-main-deep-blue-color

.title
  font-size $font-biggest-size
  color $font-deep-gray-color

button
  border 1px solid $theme-main-deep-blue-color
  background transparent
  padding 6px 8px
  font-size $font-nomal-size
  color $theme-main-deep-blue-color
  border-radius 3px
  margin-top 23px
  &:hover
    color $font-white-color
    background $theme-main-deep-blue-color

.wrap-box
  padding-bottom 210px !important


