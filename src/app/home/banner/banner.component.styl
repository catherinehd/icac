@import "../../../assets/css/variable.styl"

@keyframes move
  0%
    transform translateX(100vw)
  100%
    transform translateX(-100%)

.banner-sec
  position relative
  //min-height 6rem

h2
  color #fff
  line-height 6rem
  text-align center

.notice
  display flex
  align-items center
  position absolute
  top 0
  width 100%
  height 2rem
  background-color $theme-sub-white-color
  z-index 2

.icon-box
  width 3rem
  height 2rem
  flex none

.icon-right-box
  text-align right

.icon-notice
  width 1.2rem
  height @width
  margin-left .8rem
  margin-top .4rem
  fill $theme-main-red-color

.icon-thin-close
  width 1rem
  height @width
  margin-right .8rem
  margin-top .5rem
  fill $theme-main-red-color

.content-box
  flex auto
  overflow hidden
  .content
    font-size $font-smallest-size
    white-space nowrap
    color $theme-main-red-color
    animation move linear infinite


.swiper-slide
  img
    width 100%
