@import "../../../assets/css/variable.styl"

.totop
  width 60px
  height 50px
  background #3164e5
  position fixed
  bottom 250px
  right 1%
  border-radius 3px
  text-align center
  padding 10px 0
  cursor pointer
  z-index 99
  img
    width 8px
    transform rotate(90deg)
    display block
    margin 0 auto
  span
    color #fff
    margin-top 10px
    font-size $font-little-big-size
