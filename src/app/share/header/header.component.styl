@import "../../../assets/css/variable.styl"

header
  height 120px
  width 100%
  margin 0 auto
  margin-bottom -120px
  display flex
  position relative
  justify-content space-between
  background #fff
  .logo
    cursor pointer
    img
      width 219px
      height 78px
  .login-box
  .out-box
    padding 19px 0
    img
      vertical-align middle
      width 40px
      height @width
      margin-right 19px
    .btn-group
      display inline-block
      height 14px
      line-height 14px
    button
      background transparent
      height 14px
      font-size $font-nomal-size
      &:nth-child(1)
        border-right 1px solid $font-gray-color
        padding-right 16px
        margin-right 18px
  .login-box
    .btn-group
      margin-top 16px

.container
  width 1200px
  height 120px
  margin 0 auto
  padding 23px 2px 19px
  display flex
  position relative
  justify-content space-between

.bg
  position absolute
  width 100%
  height 180px
  background #fff
  top 0

