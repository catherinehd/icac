@import "../../../assets/css/variable.styl"

nav
  width 100%
  margin-bottom -180px
  margin-top 120px
  border-top 1px solid #f1f2f0
  position relative
  .bg
    width: 100%;
    height: 60px;
    position: absolute;
    border-top: 1px solid #f1f2f0;
    background: #fff;
  .nav-box
    width 1200px
    margin 0 auto
    ul
      display flex
      justify-content space-around
      li
        line-height 17px
        cursor pointer
        padding 20px 20px 22px
        position relative
        &:hover
          border-top 2px solid $theme-main-deep-blue-color
          padding-top 18px
          color $font-main-deep-blue-color
        .toggle
          position absolute
          padding-top 10px
          top 45px
          left 0
          width 240px
          z-index 999
          .triggle
            margin-left: 20px;
            display: block;
            height: 13px;
          ul
            display block
            border-radius 3px
            padding 10px 0
            background $hteme-white-color
            box-shadow 0 0.5px 3px 0 rgba(120, 129, 160, 0.5)
            li
              padding 18px 0 18px 24px
              &:hover
                border 0
                padding-top 20px
                color $font-white-color
                background $theme-main-deep-blue-color
      .active
        border-top 2px solid $theme-main-deep-blue-color
        padding-top 18px
        color $font-main-deep-blue-color
