@import "../../../assets/css/variable.styl"

.right-box
  width 730px
  padding 0 41px 60px
  background $hteme-white-color
  .title-box
    padding 30px 0
    border-bottom 2px solid #e5e5e5
    img
      width 21px
      height 18px
      margin-right 10px
    .title
      font-size $font-big-size
  .detail
    padding 40px 0
    font-size $font-nomal-size
    color  $font-gray-color
    div
      margin-bottom 30px
      height 40px
      &>span
        margin-left 20px
        height 40px
        display inline-block
      input
        display inline-block
        width 280px
        height 40px
        padding 0 0 0 20px
        font-size $font-nomal-size
        color $font-deep-gray-color
        border $default-main-top-border
        &:focus
          border 1px solid $theme-main-deep-blue-color
      .ok
        img
          width 18px
          margin-top 11px
      .no
        color $font-red-color
        img
          width 14px
          margin-top 13px
          margin-right 5px

button
  background $theme-main-deep-blue-color
  color $font-white-color
  font-size $font-little-big-size
  line-height 13px
  padding 9px 20px
  border-radius 3px
  width 60px
  height 30px
  &[disabled]
    color #000000
    background #ddd
