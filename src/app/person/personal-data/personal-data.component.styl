@import "../../../assets/css/variable.styl"

.right-box
  width 730px
  padding 0 41px
  background $hteme-white-color
  .title-box
    padding 30px 0
    border-bottom 2px solid #e5e5e5
    img
      width 21px
      height 18px
      margin-right 10px
    .title
      font-size $font-big-size
  .detail
    padding 30px 0
    font-size $font-nomal-size
    color  $font-gray-color
    &>div
      margin-bottom 34px
      height 12px
      line-height 12px
      &:last-child
        margin-bottom 0
    span
      &:nth-child(1)
        width 180px
        display inline-block
      &:nth-child(3)
        float right
.mail
  margin-top 20px
  text-align center
  a
    color $font-main-deep-blue-color
