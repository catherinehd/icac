@import "../../../assets/css/variable.styl"

.pro-dev-detail
  width 100%
  padding-bottom 70px
  background  $theme-main-gray-color
  &>div
    margin 0 auto
    width 1000px
  .main
    width 1000px
    margin 0 auto
    display flex
    justify-content space-between
  .article
    width 1000px;
    overflow hidden
    margin-right 20px
    background #fff
    padding 0 40px 50px
    .date
      height 16px
      margin-bottom 24px
      text-align center
      img
        width 16px
      .time
        line-height 16px
        font-size $font-small-size
        color $font-light-gray-color
    .detail
      padding 30px 0 40px
      color $font-gray-color
      border-top 1px solid rgba(52,52,52,0.1)
      div
        a
          color $font-main-deep-blue-color
          margin-left 10px
          font-weight 300
      .top
        margin-bottom 30px
        float left
        .eventsIMG
          width 450px
          margin-right 30px
      p
        line-height 22px
    .video-ppt
      button
        width 98px
        display inline-block
        padding 12px
        border-radius 6px 6px 5px
        line-height 13px
        margin-right 30px
        background transparent
        color  $font-main-deep-blue-color
        font-size $font-little-big-size
        border 1px solid $theme-main-deep-blue-color
        &:hover
          color #fff
          background $theme-main-deep-blue-color
        img
          width 15px
          margin-right 9px


.title
  font-size $font-bigger-size
  font-weight bold
  padding 30px 0 24px
  text-align center

