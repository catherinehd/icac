@import "../../../assets/css/variable.styl"

.about-index
  width 100%
  padding-bottom 70px
  background  $theme-main-gray-color
  .main
    width 1000px
    margin 0 auto
    display flex
    justify-content space-between
  .detail-left
    width 750px;
    overflow hidden
    margin-right 20px
    background #fff
    padding 0 40px 65px
    .detail
      padding 30px 0
      color $font-gray-color
      border-top 1px solid rgba(52,52,52,0.1)
      p
        line-height 22px
  .nav-right
    width 250px
    height 280px
    background #fff
    padding 20px 0
    ul
      li
        padding 22px 0 24px 23px
        cursor pointer
        line-height 14px
      .active
        background $theme-main-deep-blue-color
        color $font-white-color

.title
  font-size $font-bigger-size
  font-weight bold
  padding 30px 0

